<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealNoteApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/strong_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- Change font for Toolbar -->
    <style name="Theme.RealNoteApp.ToolbarFont" parent="Theme.RealNoteApp">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
    </style>
</resources>